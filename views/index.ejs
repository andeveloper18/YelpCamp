<% include partials/header %>
    
<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to YelpCampground!</h1>
            <p>View hand-picked dog from all over the world</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/campgrounds/new">NEW ADD DOG</a>
            </p>
         </div>
    </header>

        <dir class="row text-center" style="display:flex; flex-wrap: wrap;">

            <% campgrounds.forEach(function(campground){ %>
            <div class ="class-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src="<%=campground.image%>" >
                    <div class="caption"> 
                        <h4><%=campground.name%> </h4>
                    </div>
                    <a href="/campgrounds/<%=campground._id %>" class="btn btn-primary">More Info</a>
                </div>
              
            </div>
                <%}); %>
        </dir>        
</div>
    <% include partials/footer %>